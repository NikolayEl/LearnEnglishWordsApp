<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartLearn">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/travel"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="107dp">

    </ImageView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/learn_english"
        android:scaleType="centerCrop"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProgrammingLearn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:src="@drawable/fon_programming"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_button_future"
                android:clipToOutline="true">

            </ImageView>

            <ImageView
                android:id="@+id/ivTravelLearn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:src="@drawable/fon_travels"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_button_future"
                android:clipToOutline="true">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSpotrLearn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:src="@drawable/fon_sport"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_button_future"
                android:clipToOutline="true">

            </ImageView>

            <ImageView
                android:id="@+id/ivShoolLearn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:src="@drawable/fon_school2"
                android:scaleType="centerCrop"
                android:background="@drawable/shape_button_future"
                android:clipToOutline="true">

            </ImageView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>